<div class="mainContainer">
  <h1 class="pageTitle createConfirm">登録内容確認</h1>
  <h3 class="confirm_sentence">以下の内容で送信しますか？</h3>

  <div class="confirm_container">
    <%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
      <%= form.hidden_field :title %>
      <%= form.hidden_field :content %>

      <p>title:<%= @blog.title %></p>
      <p>content:<%= @blog.content %></p>
      <%= form.submit  "登録", class: 'btn btn-info' %>
    <% end %>
  </div>

  <div class="page-link toNewBlog">
  <%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= form.submit "戻る", name: 'back', class: 'btn btn-default' %>
  <% end %>
  </div>
</div>
